<!DOCTYPE hibernate-configuration PUBLIC
  "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
  "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL57Dialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="hibernate.connection.username">alexis</property>
    <property name="hibernate.c3p0.max_size">16</property>
    <property name="hibernate.show_sql">false</property>

    <mapping class="org.elypia.alexis.entities.ActivityData"/>
    <mapping class="org.elypia.alexis.entities.AssignableRole"/>
    <mapping class="org.elypia.alexis.entities.EmoteData"/>
    <mapping class="org.elypia.alexis.entities.EmoteUsage"/>
    <mapping class="org.elypia.alexis.entities.GuildData"/>
    <mapping class="org.elypia.alexis.entities.GuildFeature"/>
    <mapping class="org.elypia.alexis.entities.GuildMessage"/>
    <mapping class="org.elypia.alexis.entities.LogSubscription"/>
    <mapping class="org.elypia.alexis.entities.MemberData"/>
    <mapping class="org.elypia.alexis.entities.MemberSkill"/>
    <mapping class="org.elypia.alexis.entities.MessageChannelData"/>
    <mapping class="org.elypia.alexis.entities.Milestone"/>
    <mapping class="org.elypia.alexis.entities.SkillData"/>
    <mapping class="org.elypia.alexis.entities.UserData"/>
  </session-factory>
</hibernate-configuration>
